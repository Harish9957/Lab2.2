pipeline {
   agent none 
   stages {
       stage('Git Checkout') {
	      steps {
		           echo "Did the Git checkout"
			    }
		}        
       stage('Build') {
	      steps {
		         
				   echo "Build the Applicaton"
	   
		        }
		  }
	   stage('Unit Test') {
	      steps {
		         
				   echo "Run Unit Tests"
	   
		        }
		  }  
		  
		stage('Deploy') {
	      steps {
		         
				   echo "Deploy the Applicaton"
	   
		        }
		  }
	}
	
  }
